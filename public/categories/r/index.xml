      <description>&lt;h1 id=&#34;this-is-a-header&#34;&gt;This is a header&lt;/h1&gt;
&lt;pre&gt;&lt;code class=&#34;language-r&#34;&gt;library(tidyverse); library(kableExtra);  library(cowplot); library(scales); library(DT)
theme_set(theme_cowplot() +  
              background_grid(major = &amp;quot;xy&amp;quot;, 
                              minor = &amp;quot;xy&amp;quot;,
                              size.major = 0.25,
                              size.minor = 0.1) +
              theme(legend.position = &amp;quot;top&amp;quot;,
                    plot.margin = margin(10, 10, 10, 10)))
&lt;/code&gt;&lt;/pre&gt;
&lt;pre&gt;&lt;code class=&#34;language-r&#34;&gt;ggplot(mtcars, aes(wt, mpg)) +
  geom_smooth() +
  geom_point() +
  labs(title = &amp;quot;This is a plot&amp;quot;)
&lt;/code&gt;&lt;/pre&gt;
&lt;p&gt;&lt;img src=&#34;/en/post/2020-03-01-hello-world_files/figure-html/unnamed-chunk-2-1.png&#34; width=&#34;100%&#34; /&gt;&lt;/p&gt;
&lt;pre&gt;&lt;code class=&#34;language-r&#34;&gt;mtcars %&amp;gt;% 
